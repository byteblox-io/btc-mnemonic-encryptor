{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Seed Phrase Shield",
  "version": "1.0.0",
  "identifier": "com.pro.seed-phrase-shield",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Seed Phrase Shield",
        "width": 900,
        "height": 750,
        "minWidth": 750,
        "minHeight": 650,
        "resizable": true,
        "center": true,
        "decorations": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Secure Seed Phrase encryption tool",
    "longDescription": "Seed Phrase Encryptor provides secure seed phrase encryption with EFF Diceware passphrase support and network isolation features."
  },
  "plugins": {}
}
