{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BTC Mnemonic Encryptor",
  "version": "1.0.0",
  "identifier": "com.pro.btc-mnemonic-encryptor",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BTC Mnemonic Encryptor",
        "width": 900,
        "height": 750,
        "minWidth": 750,
        "minHeight": 650,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Secure Bitcoin Mnemonic encryption tool",
    "longDescription": "BTC Mnemonic Encryptor provides secure Bitcoin mnemonic encryption with EFF Diceware passphrase support and network isolation features."
  },
  "plugins": {}
}
